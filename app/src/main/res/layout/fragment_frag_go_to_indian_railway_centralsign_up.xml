<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.om.mutualtransferdemo.GoToIndianRailwayCentralSignUpActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where you want to go?"
        android:textStyle="bold"
        android:id="@+id/txtGoIndianRailwayCentral"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select Your Choice Zone And Division"
        android:id="@+id/txtGoToChoiceDivision"
        android:textSize="22dp"
        android:layout_below="@+id/txtGoIndianRailwayCentral" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Railway Zone"
        android:textSize="22dp"
        android:id="@+id/txtGoToRailwayZone"
        android:layout_below="@+id/txtGoToChoiceDivision"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGoToRailwayZone"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtGoToRailwayZone"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Railway Division"
        android:layout_marginTop="15dp"
        android:textSize="22dp"
        android:id="@+id/txtGoToRailwayDivision"
        android:layout_below="@+id/spinnerGoToRailwayZone"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:id="@+id/spinnerGoToRailwayDivision"
        android:layout_below="@+id/txtGoToRailwayDivision"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="30dp"
        android:background="#66ef66"
        android:textColor="#ffffff"
        android:id="@+id/btnNextGoToIndianRailwayCentral"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/spinnerGoToRailwayDivision"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
