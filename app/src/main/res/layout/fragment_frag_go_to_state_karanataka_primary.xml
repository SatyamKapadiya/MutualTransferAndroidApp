<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.om.mutualtransferdemo.GoToStateKaranatakaPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Where you want to go?"
        android:textStyle="bold"
        android:id="@+id/txtGoToStateKaranatakaPrimary"
        android:textSize="25dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Select Your Choice district"
        android:id="@+id/txtGoToChoiceDistrictKarnataka"
        android:textSize="22dp"
        android:layout_below="@+id/txtGoToStateKaranatakaPrimary" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choice District"
        android:textSize="22dp"
        android:id="@+id/txtGoToChoiceDistrictKarnatakaPrimary"
        android:layout_below="@+id/txtGoToChoiceDistrictKarnataka"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="22dp" />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerGoToChoiceDistrictKarnatakaPrimary"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/txtGoToChoiceDistrictKarnatakaPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:layout_marginTop="30dp"
        android:background="#66ef66"
        android:textColor="#ffffff"
        android:id="@+id/btnNextGoToStateKaranatakaPrimary"
        android:layout_gravity="center_horizontal"
        android:layout_below="@+id/spinnerGoToChoiceDistrictKarnatakaPrimary"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
